<% provide(:page_title, @pet.name) %>
<% provide(:user, 'active') %>
<div>
  <%= link_to 'Edit', edit_users_pet_path(@pet), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Remove', users_pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
</div>

<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @pet.name %></h1>
    <p><%= @pet.breed%></p>
    <%= @pet.sex%>
  </div>
</div>
