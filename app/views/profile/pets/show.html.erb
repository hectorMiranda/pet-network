<% provide(:page_title, @pet.name) %>
<% provide(:pet_active, 'active') %>

<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
  <div class="card">
    <div class="card-topper" style='background-image: url(<%= @pet.image_url %>);'></div>
      <div class="card-block">
       <h4 class="card-title"><%= @pet.name %></h4>
       <div class="card-row-title">Age</div>
       <p class="card-row"><%= @pet.age %></p>
       <div class="card-row-title">Breed</div>
       <p class="card-row"><%= @pet.breed %></p>
       <div class="card-row-title">Sex</div>
       <p class="card-row"><%= @pet.sex %> </p>
      <% if user_signed_in? %>
      <%= render 'comments/comment' %>
      <% end %>
  </div>
</div>
